<?xml version="1.0"?>

<robot name="eng405_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!-- Gazebo file used to load the plugins for gazebo for DD, camera, and LRF -->
	<xacro:include filename="$(find eng405_bot)/urdf/eng405_bot.gazebo"/>

	<!-- Import the Rviz colors -->
	<xacro:include filename="$(find eng405_bot)/urdf/materials.xacro"/>

	<!-- Robot footprint -->
	<link name="robot_footprint"></link>

	<!-- Joint from robot footprint to chassis -->
	<joint name="robot_footprint_joint" type="fixed">
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<parent link="robot_footprint"/>
		<child link="chassis"/>
	</joint>
	
	<!--Robot main chassis-->
	<link name="chassis">
		<pose>0 0 0.1 0 0 0</pose>
		
		<inertial>
			<mass value="1.0"/>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia
				ixx="0.1" ixy="0" ixz="0"
				iyy="0.1" iyz="0"
				izz="0.1"
			/>
		</inertial>

		<!-- main chassis -->
		<collision name="main_chassis_collision">
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.17 0.09 0.05" />
			</geometry>
		</collision>

		<visual name="main_chassis_visual">
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.17 0.09 0.05"/>
			</geometry>
			<material name="blue"/>
		</visual>

		<!-- Battery brick -->
		<collision name="battery_brick_collision">
			<origin xyz="-0.035 0 0.06" rpy="0 0 0"/>
			<geometry>
				<box size="0.1 0.09 0.07"/>
			</geometry>
		</collision>

		<visual name="battery_brick_visual">
			<origin xyz="-0.035 0 0.06" rpy="0 0 0"/>
			<geometry>
				<box size="0.1 0.09 0.07"/>
			</geometry>
			<material name="blue"/>
		</visual>

		<!-- right chassis -->
		<collision name="right_chassis_collision">
			<origin xyz="-0.065 -0.055 0" rpy="0 -0.52359 0"/>
			<geometry>
				<box size="0.1 0.02 0.035" />
			</geometry>
		</collision>

		<visual name="right_chassis_visual">
			<origin xyz="-0.065 -0.055 0" rpy="0 -0.52359 0"/>
			<geometry>
				<box size="0.1 0.02 0.035"/>
			</geometry>
			<material name="blue"/>
		</visual>

		<!-- left chassis -->
		<collision name="left_chassis_collision">
			<origin xyz="-0.065 0.055 0" rpy="0 -0.52359 0"/>
			<geometry>
				<box size="0.1 0.02 0.035" />
			</geometry>
		</collision>

		<visual name="left_chassis_visual">
			<origin xyz="-0.065 0.055 0" rpy="0 -0.52359 0"/>
			<geometry>
				<box size="0.1 0.02 0.035"/>
			</geometry>
			<material name="blue"/>
		</visual>

		<!-- Castor at front of robot -->
		<collision name="front_caster_collision">
			<origin xyz="0.04 0 -0.025" rpy="0 0 0"/>
			<geometry>
				<sphere radius="0.025"/>
			</geometry>
		</collision>

		<visual name="front_caster_visual">
			<origin xyz="0.04 0 -0.025" rpy="0 0 0"/>
			<geometry>
				<sphere radius="0.025"/>
			</geometry>
		</visual>
	</link>

	<!-- Robot right wheel -->
	<link name="right_wheel">
		
		<inertial>
			<mass value="0.1"/>
			<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
			<inertia
				ixx="0.1" ixy="0" ixz="0"
				iyy="0.1" iyz="0"
				izz="0.1"
			/>
		</inertial>

		<collision>
			<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
			<geometry>
				<cylinder length="0.005" radius="0.03"/>
			</geometry>
		</collision>

		<visual>
			<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
			<geometry>
				<cylinder length="0.005" radius="0.03"/>
			</geometry>
		</visual>
	</link>

	<!-- Robot left wheel -->
	<link name="left_wheel">
		
		<inertial>
			<mass value="0.1"/>
			<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
			<inertia
				ixx="0.1" ixy="0" ixz="0"
				iyy="0.1" iyz="0"
				izz="0.1"
			/>
		</inertial>

		<collision>
			<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
			<geometry>
				<cylinder length="0.005" radius="0.03"/>
			</geometry>
		</collision>

		<visual>
			<origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
			<geometry>
				<cylinder length="0.005" radius="0.03"/>
			</geometry>
		</visual>
	</link>

	<!-- Joint to connect right wheel to chassis -->
	<joint type="continuous" name="right_wheel_hinge">
		<origin xyz="-0.099641 -0.075 -0.02" rpy="0 0 0"/>
		<child link="right_wheel"/>
		<parent link="chassis"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<dynamics damping="1.0" friction="1.0"/>
	</joint>

	<!-- Joint to connect left wheel to chassis -->
	<joint type="continuous" name="left_wheel_hinge">
		<origin xyz="-0.099641 0.075 -0.02" rpy="0 0 0"/>
		<child link="left_wheel"/>
		<parent link="chassis"/>
		<axis xyz="0 1 0" rpy="0 0 0"/>
		<limit effort="10000" velocity="1000"/>
		<dynamics damping="1.0" friction="1.0"/>
	</joint>

	<!-- Camera -->
	<link name="camera">
		<inertial>
			<mass value="0.1"/>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia
				ixx="1e-6" ixy="0" ixz="0"
				iyy="1e-6" iyz="0"
				izz="1e-6"
			/>
		</inertial>

		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.025 0.025 0.025"/>
			</geometry>
		</collision>

		<visual>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.025 0.025 0.025"/>
			</geometry>
		</visual>
	</link>

	<!-- Joint connecting the camera to the chassis -->
	<joint type="fixed" name="camera_joint">
		<origin xyz="0.09 0 0" rpy="0 0 0"/>
		<parent link="chassis"/>
		<child link="camera"/>
	</joint>

	<!-- Laser Range Finder -->
	<link name="hokuyo">
		<inertial>
			<mass value="0.1"/>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<inertia
				ixx="1e-6" ixy="0" ixz="0"
				iyy="1e-6" iyz="0"
				izz="1e-6"
			/>
		</inertial>

		<collision>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<box size="0.1 0.1 0.1"/>
			</geometry>
		</collision>

		<visual>
			<origin xyx="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://eng405_bot/meshes/hokuyo.dae"/>
			</geometry>
		</visual>
	</link>

	<!-- Joint connecting the chassis with the LRF -->
	<joint type="fixed" name="hokuyo_joint">
		<origin xyz="-0.035 0 0.1" rpy="0 0 0"/>
		<parent link="chassis"/>
		<child link="hokuyo"/>
	</joint>
</robot>